<launch>
  <!-- https://github.com/ros-planning/navigation/issues/206 -->
  <rosparam command="delete" ns="move_base" />
  <include file="$(find rplidar_ros)/launch/rplidar.launch">
    <arg name="serial_port" value="/dev/ttyACM0" />
    <arg name="serial_baudrate" value="115200" />
    <arg name="frame_id" value="laser_frame" />
    <arg name="inverted" value="false" />
    <arg name="angle_compensate" value="true" />
    <arg name="scan_topic" value="/scan" />     <!-- Rplidar Node code doesn't have a parameter for scan topic, but it is "scan" by default -->
  </include>

  <!-- Map server -->
  <arg name="map_file" default="$(find got_slam)/map/hotel1.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <arg name="initial_pose_x" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_y" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_a" default="0.0"/>
  <include file="$(find got_slam)/launch/includes/amcl.launch.xml">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <include file="$(find got_slam)/launch/includes/move_base.launch.xml"/>

</launch>

